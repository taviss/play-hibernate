<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="app.models.entities.Person" table="persons">
        <id name="userid" type="int" column="personId">
            <generator class="increment" />
        </id>
        <property name="name">
            <column name="name" />
        </property>
        <property name="age">
            <column name="age" />
        </property>
    </class>
</hibernate-mapping>