# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()
GET		/siteAdd					@controllers.SiteController.addSite()
GET		/siteRemove					@controllers.SiteController.removeSite()
GET		/productAdd					@controllers.ProductController.addProduct()
GET		/productRemove				@controllers.ProductController.removeProduct()
GET		/productUpdate				@controllers.ProductController.updateProductName()
GET		/productMaster/:action		@controllers.ProductController.masterProduct(action: String)

POST    /login/submit               @controllers.AuthorizationController.tryLogin()
POST    /register/submit            @controllers.AuthorizationController.registerUser()
GET     /logout                     @controllers.AuthorizationController.logoutUser()
GET     /confirm/:token             @controllers.AuthorizationController.confirmUser(token : String)

POST    /changepassword/submit      @controllers.AuthorizationController.changeUserPassword()
POST    /resetpassword/submit       @controllers.AuthorizationController.resetUserPassword()
GET     /confirmreset/:token        @controllers.AuthorizationController.confirmPasswordReset(token : String)

GET     /search/:name               @controllers.SearchController.trySearch(name : String)

PUT     /users/setadmin/submit      @controllers.UserController.setAdminLevel()
PUT     /users/:id                  @controllers.UserController.updateUser(id : Long)
GET     /users/:id                  @controllers.UserController.getUser(id : Long)
POST    /users                      @controllers.UserController.createUser()
DELETE  /users/:id                  @controllers.UserController.deleteUser(id : Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)
