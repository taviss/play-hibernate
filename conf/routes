# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          				@controllers.Application.index()
GET		/siteAdd								@controllers.SiteController.addSite()
GET		/siteRemove								@controllers.SiteController.removeSite()
PUT		/product/update/:id						@controllers.ProductController.updateProduct(id : Long)
POST	/product/add							@controllers.ProductController.addProduct()
DELETE	/product/delete/:id						@controllers.ProductController.deleteProduct(id : Long)

POST    /login/submit               @controllers.AuthorizationController.tryLogin()
POST    /register/submit            @controllers.AuthorizationController.registerUser()
GET     /logout                     @controllers.AuthorizationController.logoutUser()
GET     /search/:name               @controllers.UserController.trySearch(name : String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)
