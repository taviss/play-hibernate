# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()
GET		/siteAdd					@controllers.SiteController.addSite()
GET		/siteRemove					@controllers.SiteController.removeSite()
GET		/productAdd					@controllers.ProductController.addProduct()
GET		/productRemove				@controllers.ProductController.removeProduct()
GET		/productUpdate				@controllers.ProductController.updateProductName()
GET		/productMaster/:action		@controllers.ProductController.masterProduct(action: String)

POST    /login/submit               @controllers.AuthorizationController.tryLogin()
POST    /register/submit            @controllers.AuthorizationController.registerUser()
GET     /logout                     @controllers.AuthorizationController.logoutUser()
GET     /confirm/:token             @controllers.AuthorizationController.confirmUser(token : String)
GET     /search/:name               @controllers.UserController.trySearch(name : String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)
